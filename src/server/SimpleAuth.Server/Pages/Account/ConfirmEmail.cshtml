@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = SharedLocalizer["Confirm email"];
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <hr />
        @{
            if (Model.Succeded)
            {
                <p class="text-center text-success">@SharedLocalizer["Thank you for confirming your email."]</p>
            }
            else
            {
                <p class="text-center text-danger">@SharedLocalizer["Error confirming your email."]</p>
            }
        }
        <div>
            <p class="text-center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">@SharedLocalizer["Log in"]</a>
            </p>
        </div>
    </div>
</div>
