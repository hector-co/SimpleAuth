@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row justify-content-center">
    <div class="col-md-4">
        <hr />
        @{
            if (Model.Succeded)
            {
                <p class="text-center text-success">Thank you for confirming your email.</p>
            }
            else
            {
                <p class="text-center text-danger">Error confirming your email.</p>
            }
        }
        <div>
            <p class="text-center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
            </p>
        </div>
    </div>
</div>
