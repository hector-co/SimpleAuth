@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = SharedLocalizer["Reset password confirmation"];
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row justify-content-center">
    <hr />
    <div class="col-md-8 col-lg-6 col-xl-5 text-center">
        <p>
            @HtmlLocalizer["Password has been reset.", Model.ReturnUrl]
        </p>
    </div>
</div>
